#include <bits/stdc++.h>
using namespace std;
int gcd( int a, int b){
    if (b<a) return gcd(b,a);
    if(a==0) 
    return b;
    return gcd(a,b%a);
}
 
int lcm(int a, int b)
{
    return (a / gcd(a, b)) * b;
}
int main()
{
    int t;
    cin >> t;
    while (t--)
    {        int n;
        cin>>n;
        int sum=0;
        int arr[n];
        for(int i=0;i<n;i++){
            sum+=(i,n);
        }
       cout<<sum<<"";
    }
    return 0;
}
